@page "/"

<PageTitle>Home</PageTitle>

<section id="parent" class="parent">

    @* Top container *@
    <div id="top_container" class="top_container">

        <p id="header" class="header">IP Address Tracker</p>

        <div id="input_container" class="input_container">
            <input id="user_input" class="user_input" @bind="ip_address" placeholder="Search for any IP address" maxlength="15" />
            <button id="submit" class="submit" type="submit" > > </button>
        </div>
    </div>

    @* Bottom container *@
    <div id="bottom_container" class="bottom_container">

        
    </div>

</section>

